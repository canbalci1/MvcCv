@using MvcCv.Models.Entitiy
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                
                            </ul>
                        </div>
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        @foreach (var item in Model)
                                        {


                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success">
                                                
                                                <span class="bg-success">
                                                    @item.Tarih
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    @*<a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>*@
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Girişi</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>

